extends ../layout

block content

  header
    div(id="topJumbo")
        h1(class="mainText") gTables
        a(class="inline" href='/restaurants/new/') Add New Restaurant
        a(class="inline2" href="/restaurants/") Home

  if restaurants
    table.table.table-striped
     thead
       tr
         th Image
         th Name
         th Location
         th Cuisine
         th Rating
         th Bio
     tbody
       for restaurant in restaurants
         tr
           td
             img(src=restaurant.image alt="No Image Provided." width="225px" height="225px")
           td
             a(href='/restaurants/' + restaurant.name)= restaurant.name
           td= restaurant.location + ", " + restaurant.state
           td= restaurant.cuisine
           th= restaurant.rating
           th= restaurant.bio
